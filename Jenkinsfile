pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                echo 'üß™ Running tests with Maven...'
                sh 'chmod +x mvnw'
                sh './mvnw test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'üî® Building JAR artifact...'
                sh './mvnw clean package -DskipTests'  // –°–±–æ—Ä–∫–∞ –±–µ–∑ –ø–æ–≤—Ç–æ—Ä–Ω–æ–≥–æ –∑–∞–ø—É—Å–∫–∞ —Ç–µ—Å—Ç–æ–≤
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar'  // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∞—Ä—Ç–µ—Ñ–∞–∫—Ç–∞ –≤ Jenkins
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // –Ø–≤–Ω–∞—è –∑–∞–≥—Ä—É–∑–∫–∞ Docker-–æ–±—ä–µ–∫—Ç–∞
                    docker.withRegistry('', '') {
                        def customImage = docker.build("${env.DOCKER_IMAGE}")
                        echo "–°–æ–±—Ä–∞–Ω –æ–±—Ä–∞–∑: ${customImage.id}"
                    }
                }
            }
        }
    }
}
