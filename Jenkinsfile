pipeline {
    agent any

    stages {
        stage('Test') {
            steps {
                echo 'üß™ Running tests with Maven...'
                sh 'chmod +x mvnw'
                sh './mvnw test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                }
            }
        }
        
        stage('Build') {
            steps {
                echo 'üî® Building JAR artifact...'
                sh './mvnw clean package -DskipTests'  // –°–±–æ—Ä–∫–∞ –±–µ–∑ –ø–æ–≤—Ç–æ—Ä–Ω–æ–≥–æ –∑–∞–ø—É—Å–∫–∞ —Ç–µ—Å—Ç–æ–≤
            }
            post {
                success {
                    archiveArtifacts 'target/*.jar'  // –°–æ—Ö—Ä–∞–Ω–µ–Ω–∏–µ –∞—Ä—Ç–µ—Ñ–∞–∫—Ç–∞ –≤ Jenkins
                }
            }
        }

        stage('Docker Build') {
            steps {
                script {
                    // –Ø–≤–Ω–æ —É–∫–∞–∑—ã–≤–∞–µ–º –ø—É—Ç—å –∫ Dockerfile –∏ –∫–æ–Ω—Ç–µ–∫—Å—Ç —Å–±–æ—Ä–∫–∏
                    dockerImage = docker.build("my-app:${env.BUILD_NUMBER}", ".")
                }
            }
        }
    }
}
